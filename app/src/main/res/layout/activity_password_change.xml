<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.apollobuilders.com.apollobuilders.PasswordChange">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3A9D6E"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:layout_weight="1"
            android:src="@drawable/mainlogo"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_margin="2dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Issue"
            android:id="@+id/textView15"
            android:gravity="right"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_weight="1" />


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#363636"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/linearLayout3">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Send Verification Code To Your Email Address "
        android:id="@+id/Email"
        android:layout_marginTop="20dp"
        android:paddingTop="12dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="14dp"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:text="Send"
            android:textColor="#ffffff"
            android:id="@+id/send"
            android:background="@xml/selboxtwo"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:onClick="send"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Verification Code (Sent On Your Email)"
            android:id="@+id/code"
            android:layout_marginTop="20dp"
            android:paddingTop="12dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="14dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextcode"
            android:textColorHint="#6C6C6C"
            android:padding="10dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:hint="Enter Your Verification Code"
            android:layout_marginTop="0dp"
            android:background="#4E4E4E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter New Password"
            android:id="@+id/pass"
            android:layout_marginTop="20dp"
            android:paddingTop="12dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="14dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editPassword"
            android:textColorHint="#6C6C6C"
            android:padding="10dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:hint="Enter Your new Password"
            android:layout_marginTop="0dp"
            android:background="#4E4E4E"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Confirm Password"
            android:id="@+id/conpass"
            android:layout_marginTop="20dp"
            android:paddingTop="12dp"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="14dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextConfirmPass"
            android:textColorHint="#6C6C6C"
            android:padding="10dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:hint="Confirm Your New Password"
            android:layout_marginTop="0dp"
            android:background="#4E4E4E"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:background="@xml/selboxeight"
            android:id="@+id/confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:onClick="confirm"/>



    </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#171717"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout3">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cancel"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#3A9D6E"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="cancel"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></LinearLayout>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:padding="10dp"-->
            <!--android:textSize="16dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:text="Submit"-->
            <!--android:gravity="right"-->
            <!--android:textColor="#3A9D6E"-->
            <!--android:id="@+id/button11"-->
            <!--android:layout_weight="1"-->
            <!--android:clickable="true"-->
            <!--android:onClick="submit"/>-->
    </LinearLayout>



</RelativeLayout>
