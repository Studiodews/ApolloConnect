<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.apollobuilders.com.apollobuilders.UserDetails">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5093DA"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:layout_weight="1"
            android:src="@drawable/mainlogo"
            android:layout_gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_margin="2dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Register"
            android:id="@+id/textView15"
            android:gravity="right"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:layout_weight="1" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#363636"
        android:layout_above="@id/linearLayout2"
        android:layout_below="@id/linearLayout"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="15"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Name"
                android:textSize="14dp"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:background="#4E4E4E"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:hint="First Name"
                    android:textColorHint="#6C6C6C"
                    android:layout_marginRight="2dp"
                    android:id="@+id/FName"
                    android:inputType="text"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Last Name"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#6C6C6C"
                    android:background="#4E4E4E"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/LName"
                    android:inputType="text"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Email (User Name)*"
                android:textSize="14dp"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Email Address"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:textColorHint="#6C6C6C"
                android:background="#4E4E4E"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:id="@+id/Email"
                android:inputType="textEmailAddress"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Mobile Number"
                android:textSize="14dp"
                android:textColor="#ffffff"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="+91"
                android:textColor="#ffffff"
                android:textColorHint="#6C6C6C"
                android:background="#4E4E4E"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:id="@+id/Phone" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="4"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Owner"
                    android:textColor="#ffffff"
                    android:id="@+id/radioButton1"
                    android:layout_above="@id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="Radiobtn1"
                    android:clickable="true"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tenant"
                    android:textColor="#ffffff"
                    android:id="@+id/radioButton2"
                    android:layout_above="@id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="Radiobtn2"
                    android:clickable="true"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Visitor"
                    android:textColor="#ffffff"
                    android:id="@+id/radioButton3"
                    android:layout_above="@id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="Radiobtn3"
                    android:clickable="true"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textColor="#ffffff"
                    android:id="@+id/radioButton4"
                    android:layout_above="@id/linearLayout2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:onClick="Radiobtn4"
                    android:clickable="true"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Address"
                android:textSize="14dp"
                android:textColor="#ffffff"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="14dp"
                android:hint="My Address"
                android:textColor="#ffffff"
                android:textColorHint="#6C6C6C"
                android:background="#4E4E4E"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="5dp"
                android:id="@+id/Address"
                android:inputType="text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:gravity="left"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:onClick="changepassclk"
                    android:textColor="#5093DA"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Logout"
                    android:gravity="right"
                    android:textSize="14dp"
                    android:clickable="true"
                    android:onClick="logoutclk"
                    android:textColor="#5093DA"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#171717"
        android:weightSum="3"
        android:id="@id/linearLayout2"
        android:layout_alignParentBottom="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Back"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textColor="#5093DA"
            android:id="@+id/button"
            android:clickable="true"
            android:onClick="cancel"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Update"
            android:gravity="right"
            android:textColor="#5093DA"
            android:id="@+id/button11"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="submit"/>
    </LinearLayout>

</RelativeLayout>
