<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="11"
        android:orientation="vertical"
        android:layout_below="@id/linearLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/linearLayout1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/commfragfive"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#363636"
            android:padding="5dp"
            android:weightSum="10"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Apollo Tower TVM"
                android:textSize="22dp"
                android:paddingTop="3dp"
                android:textColor="#ffffff"
                android:layout_weight="9"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView22"
                android:layout_weight="1"
                android:src="@drawable/right"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="45dp"
                android:background="#4E4E4E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="#4E4E4E"
                        android:padding="20dp"
                        android:text="Kerala -'God's own country' - is globe's celebrated tourist paradise. There is a huge inflow of foreign and domestic travellers round the year. And every year the influx of leisure tarvellers are exponentially growing. World class health care facilities in Ayurveda, modern medicine and other traditional treatment systems have increased the scope of medical tourism also. With 20% recorded increase in tourist arrivals every year, there is an increasing demand for hospitality facilities too. Apollo's ambitious twin tower hotel project and shopping complex aim to fulfill this genuine demand.

 "/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="#4E4E4E"
                        android:padding="20dp"
                        android:text="For more information"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:background="#4E4E4E"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginBottom="60dp"
                        android:text="http://www.apollobuilders.co.in/project/9/Apollo-Tower-TVM"
                        android:autoLink="web"/>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>



    </LinearLayout>




</LinearLayout>