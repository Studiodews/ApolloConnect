<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#242424"
        tools:context="app.apollobuilders.com.apollobuilders.Main2Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#e4dfdf"
        android:id="@+id/linear1"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:weightSum="3"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:layout_weight="1"
            android:src="@drawable/mainlogo"
            android:layout_marginLeft="25dp"
            android:layout_margin="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear2"
        android:layout_above="@+id/linear3"
        android:layout_below="@+id/linear1">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="#242424"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="20dp">


                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:onClick="issueclk"
                    android:background="@xml/selboxone">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:id="@+id/imageView1"
                        android:src="@drawable/issue"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Issue"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:id="@+id/textView1"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center_horizontal|bottom" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:onClick="comloaintclk"
                    android:background="@xml/selboxtwo">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/comp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Complaint"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:id="@+id/textView2"
                        android:layout_marginBottom="4dp"
                        android:layout_gravity="center_horizontal|bottom" />


                </FrameLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="20dp">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:onClick="complimentclk"
                android:background="@xml/selboxthree">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/c"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Compliment"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView3"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:onClick="suggestionclk"
                android:background="@xml/selboxfour">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/s"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Suggestion"
                    android:textSize="16dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView4"
                    android:layout_gravity="center_horizontal|bottom" />



            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="20dp">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@xml/selboxfive"
                android:onClick="historyclk">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/h"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="My History"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView5"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@xml/selboxsix"
                android:onClick="notificationclk">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/n"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Notification"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView6"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom" />



            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="20dp">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@xml/selboxseven"
                android:onClick="communityclk">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/cm"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Communities"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView7"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal|bottom" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Managed"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView72"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center_horizontal|bottom" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@xml/selboxeight"
                android:onClick="aboutusclk">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/mainlogo"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="About us"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView8"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom" />





            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="20dp">


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@xml/selboxnine"
                android:onClick="contactusclk">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView9"
                    android:src="@drawable/contactu"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Contact us"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView9"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@xml/selboxten"
                android:onClick="userprofileclk">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/u"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="User Profile"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:id="@+id/textView10"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="center_horizontal|bottom" />



            </FrameLayout>
        </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:background="#e4dfdf"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Apollo Community Management"
            android:textColor="#9C4328"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:id="@+id/textView11" />
    </LinearLayout>


    </RelativeLayout>

